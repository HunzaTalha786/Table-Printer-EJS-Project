<!-- 3rd method without boostrap -->
 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Table Printer</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <!-- Animate.css (optional) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient( #74ebd5, #ACB6E5);
       height: 100vh;
      /* margin: 0;
      padding: 2rem; */
      display: flex;
      align-items: center;
      justify-content: center;
      /* box-sizing: border-box; */
    }

    .card {
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      padding: 2rem;
      width: 100%;
      max-width: 800px;
       display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  margin: auto;
 
    }

    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
      font-size: 3rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      font-size: 2rem;
    }

    input[type="number"] {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 0.5rem;
      margin-bottom: 1.5rem;
      font-size: 1rem;
      font-size: 1.5rem;
    }

    button {
      width: 100%;
      background-color: #28a745;
      color: #fff;
      border: none;
      padding: 0.75rem;
      border-radius: 0.5rem;
      font-size: 1rem;
      cursor: pointer;
      font-size: 1.6rem;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #218838;
    }

    @media (max-width: 776px) {
     
      .card {
        padding: 1.5rem;
        width: 100%;
      }
      h1 {
      font-size: 3rem;
    }
      
    }
  </style>
</head>
<body>
  <div class="card animate__animated animate__fadeIn">
    <h1>Table Printer</h1>

    <form action="/table" method="POST">
      <label>Enter a Number:</label>
      <input type="number" name="number" placeholder="E.g. 5" required />
      <button type="submit">Print Table</button>
    </form>
  </div>
</body>
</html>
